<Window x:Class="CHW_ATP.NewPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CHW_ATP"
        mc:Ignorable="d"
        Title="NewPlayer" Height="368.067" Width="376.47">
    <Grid Margin="0,0,2,5">
        <TextBox x:Name="textBoxNameP" HorizontalAlignment="Left" Height="23" Margin="115,18,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="labelNameP" Content="Name:" HorizontalAlignment="Left" Margin="28,15,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelNationality" Content="Nationality:" HorizontalAlignment="Left" Margin="28,79,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxNationality" HorizontalAlignment="Left" Height="23" Margin="115,82,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="labelAge" Content="Age:" HorizontalAlignment="Left" Margin="28,46,0,0" VerticalAlignment="Top"/>

        <ComboBox x:Name="comboBoxStrongHand" HorizontalAlignment="Left" Margin="115,120,0,0" VerticalAlignment="Top" Width="120">
            <TextBlock>Right-Handed</TextBlock>
            <TextBlock>Left-Handed</TextBlock>
        </ComboBox>
        <Label x:Name="labelStrongHand" Content="Strong-Hand:" HorizontalAlignment="Left" Margin="28,120,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelRank" Content="Rank:" HorizontalAlignment="Left" Margin="28,151,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelHeight" Content="Height:" HorizontalAlignment="Left" Margin="28,183,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxRank" HorizontalAlignment="Left" Height="23" Margin="115,155,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBoxHeight" HorizontalAlignment="Left" Height="23" Margin="115,187,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="labelWeight" Content="Weight:" HorizontalAlignment="Left" Margin="28,221,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.095,-0.261"/>
        <Label x:Name="labelTitles" Content="Titles:" HorizontalAlignment="Left" Margin="28,252,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxWeight" HorizontalAlignment="Left" Height="23" Margin="115,221,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBoxTitles" HorizontalAlignment="Left" Height="23" Margin="115,252,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="buttonAddPlayer" Content="Add" HorizontalAlignment="Left" Margin="115,294,0,0" VerticalAlignment="Top" Width="75" Click="buttonAddPlayer_Click"/>
        <TextBox x:Name="textBoxAge" HorizontalAlignment="Left" Height="23" Margin="115,50,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
