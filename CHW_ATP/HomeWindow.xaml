<Window x:Class="CHW_ATP.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CHW_ATP"
        mc:Ignorable="d"
        Title="Players" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="26*"/>
            <ColumnDefinition Width="47*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="buttonShowPlayers" Content="Show" HorizontalAlignment="Left" Margin="20,229,0,0" VerticalAlignment="Top" Width="75" Click="button_Click" Grid.Column="1"/>
        <DataGrid x:Name="gridPlayers" HorizontalAlignment="Left" Margin="50,50,50,60" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="800" Width="525" SelectionChanged="gridPlayers_SelectionChanged"/>
        <Button x:Name="buttonRemove" Grid.ColumnSpan="2" Content="Remove" HorizontalAlignment="Left" Margin="50,21,0,0" VerticalAlignment="Top" Width="75" Click="buttonRemove_Click"/>
        <Button x:Name="buttonAdd" Content="Add" HorizontalAlignment="Left" Margin="88.2,21,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="buttonAdd_Click"/>

    </Grid>
</Window>
